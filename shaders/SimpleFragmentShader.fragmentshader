#version 330 core

in vec2 UV;

uniform sampler2D myTextureSampler;
uniform vec3 color;
uniform float power;

out vec4 FragColor;

void main(){
    vec3 textureColor = texture(myTextureSampler,UV).rgb;

    vec3 ambientLight = color * power;

    vec3 finalColor = textureColor * ambientLight;
    FragColor = vec4(finalColor, 1.0);
}